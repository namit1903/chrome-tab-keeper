{
  "manifest_version": 3,
  "name": "Tab Lock Extension",
  "version": "1.0",
  "description": "Lock tabs and ensure they are always opened when Chrome starts.",
  "permissions": [
    "tabs",
    "storage"
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "action": {
    "default_popup": "index.html"
  },
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ]
}
